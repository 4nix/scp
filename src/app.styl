.card
  width 96%
  margin 35px auto
  position relative
  // border-radius 0 0 15px 15px
  box-shadow 0px 3px 5px 1px #595959;
  .card-image
    padding 0
    overflow hidden
    height 280px
    Image 
      // border-radius 15px 15px 0 0
      width 100%
      display block
  .card-title
    // border-radius 0 0 15px 15px
    font-size 36px
    padding 10px 0 10px 20px
    color #fff
    background-color #000

  .card-from
    background-color #000
    color #fff
    font-size 24px
    display inline-block
    position absolute
    top 4px
    left 4px
    border-radius 4px
    padding 4px 10px

